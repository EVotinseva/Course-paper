<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApp.Views.BottomNavigationBar"
             Padding="0"
             Margin="0"
             HorizontalOptions="Fill"
             VerticalOptions="End">

    <ContentView.Content>
        <Grid BackgroundColor="#3E0FB6"
              Padding="0"
              HeightRequest="84"
              WidthRequest="420"
              ColumnDefinitions="*,*,*"
              VerticalOptions="End"
              HorizontalOptions="Fill">

            <Button Text="День"
                    TextColor="White"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    Clicked="OnDayClicked"/>

            <Button Text="Неделя"
                    TextColor="White"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    Grid.Column="1"
                    Clicked="OnWeekClicked"/>

            <Button Text="Месяц"
                    TextColor="White"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    Grid.Column="2"
                    Clicked="OnMonthClicked"/>
        </Grid>
    </ContentView.Content>
</ContentView>