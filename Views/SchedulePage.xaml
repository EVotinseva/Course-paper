<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="MyFirstMauiApp.Views.SchedulePage"
             Title="Сегодня">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Clicked="OnAddClicked" Priority="0" Order="Primary"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">

            <!-- Переключатель даты -->
            <DatePicker x:Name="datePicker"
                    Date="{x:Static sys:DateTime.Today}"
                     DateSelected="OnDateSelected"/>

            <!-- Список задач -->
            <CollectionView ItemsSource="{Binding TodayItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" CornerRadius="10" HasShadow="True">
                            <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto">
                                <!-- Чекбокс -->
                                <CheckBox Grid.RowSpan="2" VerticalOptions="Center"
                          IsChecked="{Binding IsDone}"
                          CheckedChanged="OnCheckChanged" />

                                <!-- Название + время -->
                                <StackLayout Grid.Column="1">
                                    <Label Text="{Binding Title}" FontSize="18"
                           TextDecorations="{Binding IsDone, Converter={StaticResource BoolToTextDecorationConverter}}" />
                                    <Label Text="{Binding Category}" FontSize="14" />
                                    <Label Text="{Binding Description}" FontSize="14" />
                                    <Label Text="{Binding Time}" FontSize="12" />
                                </StackLayout>

                                <!-- Удаление -->
                                <Button Grid.Column="2" Text="🗑" BackgroundColor="Transparent" Clicked="OnDeleteClicked" CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>