<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyFirstMauiApp"
             xmlns:views="clr-namespace:MyFirstMauiApp.Views"
             x:Class="MyFirstMauiApp.Views.SchedulePage"
             BackgroundColor="#F5F5F5"
             NavigationPage.HasNavigationBar="False">
    <!-- убираем фиолетовую плашку -->

    <ContentPage.Content>

        <Grid RowDefinitions="*, Auto" BackgroundColor="Transparent">
            <VerticalStackLayout Grid.Row="0" Padding="10" Spacing="15">
                <!-- Красивый компактный DatePicker -->
                <Border BackgroundColor="#3E0FB6"
                        StrokeThickness="1"
                        Stroke="#CCCCCC"
                        StrokeShape="RoundRectangle 10"
                        Padding="5"
                        HeightRequest="50"
                        VerticalOptions="Center"
                        Margin="0,0,10,0">

                    <DatePicker Date="{Binding SelectedDate, Mode=TwoWay}"
                                Format="dd MMMM yyyy"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                Visual="Default"
                                DateSelected="OnDateSelected"
                                />
                </Border>

                <Grid ColumnDefinitions="*, Auto"
                      ColumnSpacing="30"
                      HeightRequest="40"
                      WidthRequest="300"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      Padding="10,0"
                      Margin="0,10,0,10">
                    <!-- Заголовок "Задачи на день" -->
                    <Border BackgroundColor="#3E0FB6"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15"
                        HeightRequest="40"
                        WidthRequest="240"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        >
                        <Label Text="Задачи на день"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="0,5,0,5" />
                    </Border>
                    <!-- Кнопка "+" -->
                    <Border BackgroundColor="#3E0FB6"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 20"
                        HeightRequest="40"
                        WidthRequest="40"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Grid.Column="3">

                        <ImageButton Source="plus.png"
                                BackgroundColor="Transparent"
                                WidthRequest="20"
                                HeightRequest="20"
                                Clicked="OnAddClicked" />
                    </Border>
                </Grid>

                <!-- Список задач -->
                <Frame BackgroundColor="#E0E0E0"
                       CornerRadius="12"
                       Padding="10"
                       HasShadow="True"
                       HeightRequest="595">

                    <CollectionView ItemsSource="{Binding TodayItems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="#C5CAE9"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 8"
                                        Margin="0,5">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnTaskTapped"
                                      CommandParameter="{Binding .}" />
                                    </Border.GestureRecognizers>

                                    <Grid ColumnDefinitions="Auto, *, Auto, Auto"
                                          Padding="5"
                                          ColumnSpacing="10">

                                        <!-- Чекбокс выполнения -->
                                        <CheckBox IsChecked="{Binding IsDone}"
                                                  CheckedChanged="OnCheckChanged"
                                                  VerticalOptions="Center" />

                                        <!-- Название и (опционально) время -->
                                        <VerticalStackLayout Grid.Column="1"
                                                             VerticalOptions="Center"
                                                             Spacing="2">
                                            <Label Text="{Binding Title}"
                                                   FontSize="16"
                                                   TextColor="#212121" />

                                            <!-- Время (отображается только если Time не null) -->
                                            <Label Text="{Binding Time, StringFormat='в {0:hh\\:mm}'}"
                                                   FontSize="14"
                                                   TextColor="#555"
                                                   IsVisible="{Binding Time, Converter={StaticResource NullToBoolConverter}}" />
                                        </VerticalStackLayout>

                                        <!-- Кнопка редактировать -->
                                        <ImageButton Source="edit.png"
                                                     Grid.Column="2"
                                                     WidthRequest="24"
                                                     HeightRequest="24"
                                                     BackgroundColor="Transparent"
                                                     Margin="5,0"
                                                     Clicked="OnEditClicked"
                                                     CommandParameter="{Binding .}" />

                                        <!-- Кнопка удалить -->
                                        <ImageButton Source="delete.png"
                                                     Grid.Column="3"
                                                     WidthRequest="24"
                                                     HeightRequest="24"
                                                     Margin="5,0"
                                                     BackgroundColor="Transparent"
                                                     Clicked="OnDeleteClicked"
                                                     CommandParameter="{Binding .}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>
            </VerticalStackLayout>

            <Border Grid.Row="1"
                BackgroundColor="Transparent"
                StrokeThickness="0"
                Padding="0,0,0,0">

                <views:BottomNavigationBar />
            </Border>
        </Grid>




    </ContentPage.Content>

</ContentPage>
